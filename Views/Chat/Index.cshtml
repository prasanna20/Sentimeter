@model MVC_JQuery_Chat.Models.ChatModel
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Sentimeter</title>
    
    
    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=yes" />
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    <script src="../../Scripts/Chat.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <style type="text/css">
        body, html
        {
            height: 100%;
            text-align: center;
            margin: 0;
            padding: 0;
            overflow:hidden;
        }
        body {
            font-size: 12px;
        }
        div, body, table, p
        {
            font-family: Verdana;

        }
        
        #container
        {
            height: 80%;
            width: 80%;
            position: absolute;
            top: 10%;
            left: 10%;
            min-width: 320px;
            background-color: white;
            box-shadow: 0 8px 4px -4px rgba(0,0,0,0.4);
        }

        .box {
            display: inline-block;
            margin: 10px;
            padding: 8px 15px;
            background: #F44336;
            color:#fff;
            border: 1px solid rgba(0,0,0,0.15);
            border-radius: 4px;
            transition: all 0.3s ease-out;
            box-shadow: inset 0 1px 0 rgba(255,255,255,0.5), 0 2px 2px rgba(0,0,0,0.3), 0 0 4px 1px rgba(0,0,0,0.2); /* Font styles */
            text-decoration: none;
            text-shadow: 0 1px rgba(255,255,255,0.7);
        }
            .box input[type=text]{ color:#333;}
            
            #Error {
                width: 80%;
                left: 10%;
                position: absolute;
                height: 10%;
                top: 91%;
                color: Red;
                font-weight: bold;
                text-align: center;
            }
        
        #LastRefresh
        {
            display: inline;
            position: absolute;
            font-size: xx-small;
            text-align: right;
            top: 7%;
            left: 10%;
            width: 80%;
        }
        #YourNickname
        {
            display: inline;
            position: absolute;
            font-weight: bold;
            text-align: left;
            top: 7%;
            left: 10%;
            width: 50%;
        }
    </style>
</head>
<body>
    <div style=" text-align: center;">
            <a href="@Url.Action("Index", "Home")">
                <img src="http://10.50.224.58/Subscription/XomeLogo.png" alt="Xome Logo" />
            </a>
    </div>
    <div id="YourNickname">
    </div>
    <div id="LastRefresh">
    </div>
    <div id="container">
        <div class="box" id="LoginPanel">
            Enter name :
            <input type="text" id="txtNickName" /> 
            Enter Asset Id :
            <input type="text" id="txtAsset" />
            <button class="btn btn-default btn-xs" id="btnLogin" value="Start">
                Go</button>
        </div>
    </div>
    <div id="Error">
    </div>
    @Ajax.ActionLink("Login", "Index", new { thisUserLoggedOn = "" }, new AjaxOptions { UpdateTargetId = "container", OnFailure = "LoginOnFailure", OnSuccess = "LoginOnSuccess" }, new { @id = "LoginButton", @style = "visibility:hidden;" })
</body>
</html>
